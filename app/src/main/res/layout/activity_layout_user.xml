<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#257E45"
    tools:context=".View.LayoutUserActivity">

    <TextView
        android:id="@+id/text_prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Promo-App"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/img_perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/text_prices"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        android:src="@drawable/rounded_edittext" />

    <ImageView
        android:id="@+id/cam_profile_image"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_perfil"
        android:layout_marginStart="-23dp"
        android:elevation="20dp"
        android:layout_toEndOf="@id/img_perfil"
        android:src="@drawable/baseline_photo_camera" />

    <TextView
        android:id="@+id/t_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_perfil"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <View
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_prices"
        android:layout_marginTop="80dp"
        android:background="#308E52" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fixed_layout"
            android:layout_below="@id/text_view"
            android:background="@color/white"
            android:contentDescription="scroll">

            <LinearLayout
                android:id="@+id/product_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Items will be added dynamically here -->
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/fixed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_home_24" />

            <ImageView
                android:id="@+id/icon_add_circle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_circle_outline_24" />

            <ImageView
                android:id="@+id/profile_user_"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_person_outline_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="INICIO"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_add_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="ADICONAR PRODUTO"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:text="USUARIO"
                android:textAlignment="center"
                android:textSize="10sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>