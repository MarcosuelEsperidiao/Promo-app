<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#009688"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/text_welcome"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/text_lowprice"
        android:layout_marginTop="100dp"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/lowprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_name"
        android:hint="@string/e_mail"
        android:textColorHint="@color/green"
        android:textAlignment="center"
        android:textSize="15sp"
        android:padding="10dp"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/edit_password"
        android:hint="Senha"
        android:textAlignment="center"
        android:textColorHint="@color/green"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:inputType="numberPassword"
        android:layout_below="@id/edit_name"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btn_button"
        android:text="Login"
        android:textColor="@color/green"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:backgroundTint="#DADADA"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:id="@+id/text_txt"
        android:layout_below="@id/btn_button"
        android:text="@string/ask_creat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/white"
        android:layout_alignRight="@id/text_creat"
        android:layout_below="@id/text_creat"
        android:layout_width="110dp"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/text_creat"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/text_txt"
        android:layout_below="@id/btn_button"
        android:text="Cadastre-se!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_help"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_help_24"
        android:layout_width="40sp"
        android:layout_height="40sp"/>

    <TextView
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="Esqeuceu a senha?"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_help"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>



</RelativeLayout>