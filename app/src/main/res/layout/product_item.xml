<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:elevation="20dp"
        android:src="@drawable/rounded_edittext"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:text="AAAAAAAAAA"
        android:id="@+id/text_timestamp"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/text_price_detail"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageViewProfile"
        android:layout_toEndOf="@id/imageViewProfile"
        android:fontFamily="@font/roboto"
        android:padding="13dp"
        android:text="AAAAAAA"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:fontFamily="@font/raleway_medium"
        android:text="AAAAAAA"
        android:textSize="35sp" />



    <TextView
        android:text="AAAAAAA"
        android:id="@+id/text_locario"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/text_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:fontFamily="@font/roboto"
        android:textSize="18sp" />



    <TextView
        android:text="AAAAAAA"
        android:id="@+id/text_price_detail"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_locario"
        android:fontFamily="@font/roboto"
        android:textSize="18sp" />


    <ImageView
        android:background="@color/black"
        android:id="@+id/imageViewPreview"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/text_price_detail"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="AAAAAAA"
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:scrollHorizontally="false"
        android:layout_below="@id/imageViewPreview"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"/>


    <View
        android:layout_marginTop="60dp"
        android:background="#16000000"
        android:layout_below="@id/text_description"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>
